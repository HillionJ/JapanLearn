<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100px"
        android:text="か"
        android:textAlignment="center"
        android:textSize="500px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="50px"
        android:backgroundTint="#1AADB1"
        android:padding="50px"
        android:text="DEMARRER"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50px"
        app:layout_constraintBottom_toTopOf="@+id/start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess"
        app:layout_constraintVertical_bias="0.0">

        <CheckBox
            android:id="@+id/hiraganaCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hiragana" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="75px">

            <CheckBox
                android:id="@+id/hiraganaCombinedCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inclure les Combinaisons" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/katakanaCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Katakana" />

        <CheckBox
            android:id="@+id/kanjiCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kanji" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>